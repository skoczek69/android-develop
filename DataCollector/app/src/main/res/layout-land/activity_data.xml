<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewName"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textViewName"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSurname"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editTextName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSurname"
        android:layout_below="@+id/textViewSurname"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonSave"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickNext" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBirthDateCaption"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editTextSurname"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="..."
        android:layout_height="wrap_content"
        android:id="@+id/textViewBirhDate"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textViewBirthDateCaption"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:textAlignment="center" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChangeBirthDate"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignBottom="@+id/textViewBirhDate"
        android:layout_toEndOf="@+id/textViewBirhDate"
        android:layout_marginLeft="25dp"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCancel"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickCancel"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentEnd="true" />

</RelativeLayout>