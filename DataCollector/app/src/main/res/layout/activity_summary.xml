<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wmiiul.datacollector.SummaryActivity"
    android:background="@color/colorBackground">

    <TextView
        android:text="Summary:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSummary"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonSave"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickSave" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonBack"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickBack" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSummary"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewData"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:minLines="2"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/camera_icon"
        android:id="@+id/imageView"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_below="@+id/textViewData"
        android:scaleType="fitCenter"
        android:layout_above="@+id/buttonDiscard"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDiscard"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickDiscard"
        android:layout_above="@+id/buttonBack"
        android:layout_alignParentStart="true" />

</RelativeLayout>
